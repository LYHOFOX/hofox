name: MissingImg

# Controls when the workflow will run
on:
  #   # Triggers the workflow on push or pull request events but only for the main branch
  #   push:
  #     branches: [ main ]
  pull_request:
    branches: [ master ]
  

  # Allows you to run this workflow manually from the Actions tab
  workflow_dispatch:

jobs:
  main:
    runs-on: ubuntu-latest
    steps:
      # Checks-out your repository under $GITHUB_WORKSPACE, so your job can access it
      - uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.12'
          architecture: 'x64'
      - name: Install Python requirements mwclient beautifulsoup4 lxml
        run: |
          python -m pip install --upgrade pip
          pip install mwclient beautifulsoup4 lxml

      - env:
          WIKIGG_USER_PASSWORD: ${{ secrets.WIKIGG_USER_PASSWORD}}
          WIKIGG_USER: ${{ secrets.WIKIGG_USER }}
          BWIKI_SESSION_DATA: ${{ secrets.BWIKI_SESSION_DATA}}
        run: python -u ./missingImg.py
